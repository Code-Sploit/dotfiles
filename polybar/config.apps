[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
icon = #ffffff

[bar/ypsilon]
;monitor = ${env:MONITOR:HDMI-1}
width = 10%
height = 30
offset-x = 90%
offset-y = 90%
radius = 6.0
fixed-center = false
bottom = false

;background = ${colors.background}
foreground = ${colors.foreground}

background = #262626
;foreground = #000000


line-size = 3
line-color = #f00

border-size = 2
border-color = #0000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = hack regular:pixelsize=9;1
font-1 = hack:fontformat=truetype:size=8:antialias=false;0
;font-1 = "Wuncon Siji":pixelsize=10;1
font-2 = siji:pixelsize=20;1

modules-left = filesystem
modules-center = mpd
;modules-right = filesystem

tray-position = right
tray-padding = 2
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "î‰¯ "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.secondary}

label-layout = KB: %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = ğŸ’½ %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%% U
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}
